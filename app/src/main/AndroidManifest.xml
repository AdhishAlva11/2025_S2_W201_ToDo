<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for Maps & Places -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._2025_S2_W201_ToDo">

        <!-- Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBJvIhFs-ZgMJIuhrPCUH2M33zdvyj-Od4" />

        <!-- Signup screen -->
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false" />

        <!-- Login screen -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />

        <!-- Favourites screen -->
        <activity
            android:name=".activities.FavouritesActivity"
            android:exported="false" />

        <!-- Home page -->
        <activity
            android:name=".activities.HomePageActivity"
            android:exported="false"
            android:label="@string/title_activity_home_page" />

        <!-- Map screen -->
        <activity
            android:name=".activities.DisplayMapActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:label="@string/title_activity_display_map" />

        <!-- Search screen (launcher) -->
        <activity
            android:name=".activities.SearchActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>