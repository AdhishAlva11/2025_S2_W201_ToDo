<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"
    tools:ignore="ExtraText">
    <stroke
        android:width="2dp" />  <!-- Define the border thickness -->
    android:color="#FF0000" /> <!-- Define the border color (red in this example) -->
    <solid android:color="@android:color/transparent" /> <!-- Make the background transparent if only the border is desired -->
    <corners android:radius="5dp" /> <!-- Optional: Add rounded corners -->
</shape>