<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Button: Add to Favourites -->
        <Button
            android:id="@+id/addFavouriteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_to_favourites"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

        <!-- Button: Add to Itinerary -->
        <Button
            android:id="@+id/btnAddToItinerary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/add_to_itinerary"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

        <!-- Button: Share Location -->
        <Button
            android:id="@+id/btnShareLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/share_location"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />


        <!-- Title (place name) -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Address -->
        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Rating -->
        <TextView
            android:id="@+id/ratingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Open/Closed Status -->
        <TextView
            android:id="@+id/openStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Price Information -->
        <TextView
            android:id="@+id/priceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/price_info_unavailable"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Reviews Header -->
        <TextView
            android:id="@+id/reviewsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="4dp"
            android:text="@string/reviews_header"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Reviews Content -->
        <TextView
            android:id="@+id/reviewsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>
</ScrollView>
