<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.ItineraryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="Travel Itinerary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#EB4335"/>

        <!-- Add Event -->
        <TextView
            android:id="@+id/tvAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event +"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Trip List -->
        <LinearLayout
            android:id="@+id/itineraryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Trip 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tripCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/textview_border">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tripTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/japan_adventure"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tripDate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date: March 15, 2026"/>

                        <TextView
                            android:id="@+id/tripDays1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration: 10 Days"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tripMenu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Trip Menu"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Trip 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tripCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/textview_border">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tripTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="South Island Road Trip"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tripDate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date: December 5, 2025"/>

                        <TextView
                            android:id="@+id/tripDays2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration: 7 Days"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tripMenu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="Trip Menu"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Navigation (Footer) -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_nav_menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
